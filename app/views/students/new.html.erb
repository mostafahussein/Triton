<%= render 'shared/navbar' %>
<div class="container-fluid">
  <div class="row-fluid">

    <div class="offset1 span11">
      <!--Body content-->
      <div class="hr">
        <img src="/assets/korganizer-icon.png" alt="image" />
        <h2>Student Admission</h2>
      </div>
      <div id="app-back-button" class="span10">
        <a onclick="history.back(); return false;" href="#" id= "bk">
          <img border="0" src="/assets/back-icon.png" alt="Back" id="bak" >
        </a>
      </div>
      <hr style="color: #049cdb; background-color: #049cdb; height: 5px; width: 1100px; "></hr>
      <!-- page content goes here -->
      <div class="row">

  <div class="offset1 span4">

     <h4>Step 1 - Student details</h4>
     <%= simple_form_for(@student) do |f| %>
     <%= f.error_messages %>
    <%= f.input :admission_no %>
    <%= f.input :admission_date , class: 'admission' %>
    <h4>Student - Personal Details</h4>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth, class: 'birth' %>
     <%= f.association :batch, as: :select, label: 'Course & Batch' %>
      <%= f.input :gender, label: 'What is your gender?', collection: [ ['M', 'Male' ], ['F', 'Female'] ], as: :radio_buttons, label_method: :last, value_method: :first, checked: @student.gender, item_wrapper_class: 'inline'%>
    <%= f.input :blood_group, prompt: 'Unknown', collection: ['A+','A-','B+','B-','O+', 'O-', 'AB+', 'AB-'] %>
     <%= f.input :birth_place %>
     <%= f.label 'Nationality' %>
     <%= f.association :nationality, as: :select, include_blank: false %>
     <%= f.input :language, label: 'Mother tongue' %>
 </div>
 
 <div class="offset3 span4">

   <h4>Student - Contact Details</h4>
   <%= f.input :address_line1, label: 'Address line 1' %>
   <%= f.input :address_line2, label: 'Address Line 2' %>
   <%= f.input :city %>
   <%= f.input :post_code %>
   <%= f.association :country, as: :select, label: 'Country' %>
   <%= f.input :phone1, label: 'Phone' %>
   <%= f.input :phone2, label: 'Mobile' %>
   <%= f.input :email %>
   <button class="btn btn-large btn-success" type="submit">Save & Proceed</button>
   <% end %>
 
</div>

</div>

    </div>
  </div>
</div>