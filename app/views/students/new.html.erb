<h1>Admission</h1>
<h4>Step 1 - Student details</h4>

<div>
  <div class="span6 offset2">
    <%= form_for(@student) do |f| %>
        <% if @student.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-error">
                The form contains <%= pluralize(@student.errors.count, 'error') %>
              </div>
              <ul>
                <% @student.errors.full_messages.each do |msg| %>
                    <li>* <%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>


        <table border="0" style="width: 65%" class='hero-unit'>
          <tr>
            <th><div class="field"><%= f.label :admission_no %></div></th>
            <th><div class="field"><%= f.text_field :admission_no %></div></th>
          </tr>

          <tr>
            <th><div class="field"><%= f.label :admission_date %></div></th>
            <th><div class="field"><%= f.text_field :admission_date , class: 'admission' %></div></th>
          </tr>
        </table>
        <h4>Student - Personal Details</h4>
        <table border="0" style="width: 65%" class='hero-unit'>
          <tr>
            <th><div class="field"><%= f.label :first_name %></div></th>
            <th><div class="field"><%= f.text_field :first_name %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :middle_name %></div></th>
            <th><div class="field"><%= f.text_field :middle_name %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :last_name %></div></th>
            <th><div class="field"><%= f.text_field :last_name %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :date_of_birth %></div></th>
            <th><div class="field"><%= f.text_field :date_of_birth, class: 'birth' %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label 'Course & Batch' %></div></th>
            <th><div class="field"><%= f.collection_select :batch_id, Batch.all , :id, :name %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :gender %></div></th>
            <th><div class="field"><%= f.radio_button :gender , 'Male', :checked => true %><%= label :gender, 'Male' %></div></th>
            <th><div class="field"><%= f.radio_button :gender, 'Female' %><%= label :gender, 'Female' %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :blood_group %></div></th>
            <th><div class="field"><%= f.select :blood_group , ([%w(Unknown Unknown), %w(A+ A+), %w(A- A-),
                                                                 %w(B+ B+), %w(B- B-), %w(O+ O+),
                                                                 %w(O- O-), %w(AB+ AB+), %w(AB- AB-)]) %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :birth_place %></div></th>
            <th><div class="field"><%= f.text_field :birth_place %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label 'Nationality' %></div></th>
            <th><div class="field"><%= f.collection_select :nationality_id, Country.all, :id , :name %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label 'Mother tongue' %></div></th>
            <th><div class="field"><%= f.text_field :language %></div></th>
          </tr>
              </table>
        <h4>Student - Contact Details</h4>
        <table border="0" style="width: 65%" class='hero-unit'>
          <tr>
            <th><div class="field"><%= f.label :address_line1 %></div></th>
            <th><div class="field"><%= f.text_field :address_line1 %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :address_line2 %></div></th>
            <th><div class="field"><%= f.text_field :address_line2 %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :city %></div></th>
            <th><div class="field"><%= f.text_field :city %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :post_code %></div></th>
            <th><div class="field"><%= f.text_field :post_code %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label 'Country' %></div></th>
            <th><div class="field"><%= f.collection_select :country_id , Country.all , :id , :name %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label 'Phone' %></div></th>
            <th><div class="field"><%= f.text_field :phone1 %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label 'Mobile' %></div></th>
            <th><div class="field"><%= f.text_field :phone2 %></div></th>
          </tr>
          <tr>
            <th><div class="field"><%= f.label :email %></div></th>
            <th><div class="field"><%= f.text_field :email %></div></th>
          </tr>
          <tr>
            <th><div class="actions"><%= f.submit 'Save & Proceed', class: 'btn btn-primary'%></div></th>
          </tr>
        </table>
    <% end %>
  </div>
</div>