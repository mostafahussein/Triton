<div>
  <div style="float:left;">
  <h4>Students List</h4>
  </div>
  <ul class="nav pull-right">
    <%= form_tag students_path, method: :get do %>
    <div style="float:left; padding-right:10px;">
      <%= text_field_tag :search , params[:search] %>
      </div>
      <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
      <div style="clear:left;">
      <%= link_to 'Advanced Search', '#' %>
      </div>
    <% end %>
  </ul>
  <div>
  <table class="table table-bordered table-hover">
    <tr>
      <th bgcolor="#B7B7B7">Admission Date</th>
      <th bgcolor="#B7B7B7">Full Name</th>
      <th bgcolor="#B7B7B7">Student Batch</th>
      <th bgcolor="#B7B7B7">Student Class</th>
      <th bgcolor="#B7B7B7">Phone Number</th>
      <th bgcolor="#B7B7B7">Mobile Number</th>
    </tr>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.admission_date %></td>
      <td><%= student.full_name %></td>
      <td><%= student.batch.batch_language %></td>
      <td><%= student.student_class.name %></td>
      <td>#</td>
      <td>#</td>
    </tr>
    <% end %>
  </table>
  </div>
</div>