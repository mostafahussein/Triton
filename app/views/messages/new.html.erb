<%= render 'messages/messages_sidebar' %>
<div class="span9">
      <!--Body content-->
      <div class="hr">
        <img src="/assets/Inbox-icon.png" alt="image" />
        <h2>New Message</h2>
      </div>
      <div id="app-back-button" style="padding-right: 50px;">
    <a onclick="history.back(); return false;" href="#" id= "bk">
      <img border="0" src="/assets/back-icon.png" alt="Back" id="bak" >
    </a>
  </div>
    <hr style="color: #049cdb; background-color: #049cdb; height: 5px; width: 975px; "></hr>
     <div class="portlet box blue">
    <div class="portlet-title">
      <div class="caption"><i class="icon-reorder"></i>New Message</div></div>
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="/messages" class="form-horizontal" method="POST">
<%= form_for @message, :url => user_messages_path(@user) do |f| %>
  <% if @message.recepient_id.nil? %>
    <p>
      To:<br />
      <%= f.text_field :recepient_id %>
    </p>
  <% else %>
    <p>
      To:<br />
      <%= f.text_field :recepient_id, :value=>@message.recepient_id,:readonly => true %>
    </p>
  <% end %>
      <p>
        Subject:<br />
        <%= f.text_field :subject %>
      </p>
      <p>
        Message:<br />
        <%= f.text_area :body , :rows => 5 , :col => 9 %>
      </p>
          <div class="form-actions">
            <button type="submit" class="btn blue"><i class="icon-ok"></i> Send</button>
          </div>
        </form>
        <% end %>
        <!-- END FORM--> 
      </div>
    </div>