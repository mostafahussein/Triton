<div class="navbar">
  <div class="navbar-inner">
    <div class="container">

      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href="#">Triton</a>

      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
        <!-- .nav, .navbar-search, .navbar-form, etc -->
        <ul class="nav">
          <li class="active">
            <%= link_to 'Dashboard' , '/user/dashboard' %>
          </li>
        </ul>
        <form class="navbar-search pull-left" style="text-align: center">
          <input type="text" class="search-query" placeholder="Search">
        </form>
        <ul class="nav pull-right">
          <% if current_user %>
              <li><h4 style="color: #ffffff">Logged in as <%= current_user.user_name %> </h4> </li>
              <li> <%= link_to "Log out", session_path("current"), method: "delete" %> </li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
<h1><%= @article.name %></h1>

<div class='span5 hero-unit'><center><h3><%= simple_format @article.content %></h3></center></div>
  <br><br><br><br><br><br><div class="span4 container">
  <h2>Comments</h2>

  <div id="comments">
    <%= render @article.comments %>
  </div>

  <h3>New Comment</h3>

  <%= render 'comments/form' %>

</div>