<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
     
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
     
      <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href="#">Triton</a>
     
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
        <!-- .nav, .navbar-search, .navbar-form, etc -->

        <!-- The drop down menu -->
        <ul class="nav pull-right">
          <li class="dropdown">


            <button class='btn btn-primary login-btn' data-toggle='dropdown'>
              <i class="icon-off icon-white"></i> Login</button>

            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
              <!-- Login form here -->
              <%= form_tag sessions_path do %>
                  <div>
                  <div class="field">
                    <h3><%= text_field_tag :user_name, params[:user_name], placeholder: 'Username' %></h3>
                  </div>
                  <div class="field">
                    <h3><%= password_field_tag :password, params[:password], placeholder: 'Password' %></h3>
                  </div></div>
                  <div class="action"><%= submit_tag 'Login', class: 'btn' %></div>
              <% end %>
            </div>
          </li>
        </ul>

      </div>
    </div>
  </div>
</div>



<div class="row">
  <div class="span6 offset6">
    <h1>Log into Triton</h1>
    <%= form_tag sessions_path do %>
        <div class="field">
          <%= label_tag :user_name %>
          <%= text_field_tag :user_name, params[:user_name] %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="action"><%= submit_tag "Login", class: "btn btn-mini btn-primary" %></div>
    <% end %>
  </div>
</div>