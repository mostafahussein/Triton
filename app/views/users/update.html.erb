<h1>Manage users</h1>

<div class="row">
  <div class="span6 offset6">
    <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-error">
                The form contains <%= pluralize(@user.errors.count, "error") %>
              </div>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li>* <%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :user_name %>
          <%= f.text_field :user_name, readonly: true %>
        </div>
        <div class="field">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, readonly: true %>
        </div>
        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, readonly: true %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, readonly: true %>
        </div>
        <div class="field">
          <%= f.check_box :admin %>Admin<br>
          <%= f.check_box :employee %>Employee<br>
          <%= f.check_box :student %>Student<br>
          <%= f.check_box :parent %>Parent
        </div>
        <div class="actions"><%= f.submit "Update", class: "btn btn-mini btn-primary" %></div>
    <% end %>
  </div>
</div>


