  <div class="portlet box blue">
    <div class="portlet-title">
      <div class="caption"><i class="icon-reorder"></i>Open a New Ticket</div></div>
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="/tickets" class="form-horizontal" method="POST">
			   <%= simple_form_for(@ticket) do |f| %>
			     <%= f.error_messages %>
			     <%= f.input :user_id %>
			     <%= f.input :first_name %>
			     <%= f.input :last_name %>
			     <%= f.input :email %>
			     <%= f.association :batch %>
			     <%= f.association :student_class %>
			     <%= f.association :employee_department, input_html: { value: 6 } %>
			     <%= f.association :course, as: :select%>
	         <%= f.input :title %>
	         <%= f.input :description, input_html: {class: "input-xxlarge", rows: "10"}  %>
          <div class="form-actions">
            <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
            <button type="button" class="btn">Cancel</button>
          </div>
        </form>
        <% end %>
        <!-- END FORM--> 
      </div>
    </div>